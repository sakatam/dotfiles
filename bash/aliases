#!/bin/bash

alias curl='curl -w "\n"'
alias formatjson='python -mjson.tool'
alias grep='grep --color'
alias ls='ls -GF'
alias ll='ls -l'
alias psql='psql -x'
alias screen='screen -U -D -RR'
alias tree='tree -F --dirsfirst -C'
alias zcat='gunzip -c'
alias tmux='tmux attach'

# OSX specific
alias here='open .'
alias osascript='arch -i386 osascript'

# git
alias g='git'
alias gg='git grep'

# ruby
alias be='bundle exec'
